<?xml version="1.0"?>
<project default="build" basedir="../../../../../..">

    <!-- Set Properties -->
    <!-- User settings -->
    <property file="${user.home}/ant.properties"/>
    <!-- Set property lib dir -->
    <property name="properties.dir" value="tools/ant/properties"/>
    <!-- Significant dirs -->
    <property file="${properties.dir}/dirs.properties"/>
    <!-- Compiler settings -->
    <property file="${properties.dir}/modern.properties"/>
    <!-- Compile-time classpath properties files -->
    <property file="${properties.dir}/extrapath.properties"/>

    <!-- Targets -->
    <target name="build" depends="compile"/>

    <target name="compile">

        <copy file="${derby.build.src.dir}/com/splicemachine/derbyBuild/odbcgen_fragments.properties"
              tofile="${out.dir}/com/splicemachine/derbyBuild/odbcgen_fragments.properties"/>

        <javac
                source="1.7"
                target="1.7"
                bootclasspath="${empty}"
                nowarn="on"
                debug="${debug}"
                depend="${depend}"
                deprecation="${deprecation}"
                optimize="${optimize}"
                proceed="${proceed}"
                verbose="${verbose}"
                srcdir="${derby.build.src.dir}"
                destdir="${out.dir}">
            <classpath>
                <pathelement path="${main.classpath};${java.home}/../lib/tools.jar"/>
                <pathelement path="${ant.core.lib}"/>
            </classpath>
            <include name="com/splicemachine/derbyBuild/**"/>
        </javac>
    </target>
</project>
