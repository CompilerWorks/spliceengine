<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.splicemachine</groupId>
        <artifactId>db-project</artifactId>
        <version>1.1.1-SNAPSHOT</version>
    </parent>
    <artifactId>dbclient</artifactId>
    <name>Apache Derby Client JDBC Driver</name>
    <description>The Derby client JDBC driver, used to connect to a Derby server over a network connection.
    </description>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <tasks>

                                <copy file="${basedir}/../../jars/${sanity}/derbyclient.jar"
                                      tofile="${basedir}/target/${project.build.finalName}.jar"
                                      overwrite="true"/>

                                <jar destfile="${basedir}/target/${project.build.finalName}-sources.jar">
                                    <fileset dir="${basedir}/../../java/client"/>
                                </jar>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
