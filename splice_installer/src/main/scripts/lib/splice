#!/bin/bash

# Generic Splice Machine SQL Shell

CLASSPATH=""

# sets VM specific env vars
. ./lib/setEnv

echo "Running Splice Machine SQL shell"

MYCLASSPATH=$HBASE_HOME/hbase.jar:$HBASE_LIB/*

#echo $MYCLASSPATH

echo "Connect using: [connect 'jdbc:derby://localhost:1527/splicedb';]"
java -classpath $MYCLASSPATH -Djdbc.drivers=org.apache.derby.jdbc.ClientDriver org.apache.derby.tools.ij $*

