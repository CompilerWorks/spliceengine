<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>structured_constants</artifactId>
		<packaging>jar</packaging>
	<name>structured_constants</name>
	<parent>
		<artifactId>structured_hbase</artifactId>
		<groupId>com.splicemachine</groupId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>
	<dependencies>
	
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
		</dependency>

        <dependency>
            <groupId>com.gotometrics.orderly</groupId>
            <artifactId>orderly</artifactId>
            <version>0.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.esotericsoftware.kryo</groupId>
            <artifactId>kryo</artifactId>
            <version>2.21</version>
        </dependency>
	</dependencies>
	<build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>buildnumber-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
                <execution>
                    <phase>validate</phase>
                    <goals>
                        <goal>create</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <shortRevisionLength>10</shortRevisionLength>
                <doCheck>false</doCheck>
                <doUpdate>false</doUpdate>
            </configuration>
        </plugin>
        			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.15</version>
				<configuration>
				 	<parallel>classes</parallel>
          			<threadCount>5</threadCount>
          			<perCoreThreadCount>false</perCoreThreadCount>
					<argLine>-Xms256M -Xmx512M</argLine>
					<redirectTestOutputToFile>true</redirectTestOutputToFile>
					<includes>
						<include>${runClass}</include>
					</includes>
				</configuration>
			</plugin>
        </plugins>        
	</build>
</project>